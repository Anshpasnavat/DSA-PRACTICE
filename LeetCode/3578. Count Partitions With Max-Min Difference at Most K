class Solution {
public:
    static const int MOD = 1e9 + 7;

    int countPartitions(vector<int>& nums, int k) {
        int n = nums.size();

        vector<long long> dp(n + 1, 0), prefix(n + 1, 0);
        dp[0] = 1;
        prefix[0] = 1;

        deque<int> maxD, minD;
        int l = 0;

        for (int r = 0; r < n; r++) {
            // maintain max deque
            while (!maxD.empty() && nums[maxD.back()] < nums[r])
                maxD.pop_back();
            maxD.push_back(r);

            // maintain min deque
            while (!minD.empty() && nums[minD.back()] > nums[r])
                minD.pop_back();
            minD.push_back(r);

            // shrink window if invalid
            while (nums[maxD.front()] - nums[minD.front()] > k) {
                if (maxD.front() == l) maxD.pop_front();
                if (minD.front() == l) minD.pop_front();
                l++;
            }

            // dp transition
            long long val = prefix[r];
            if (l > 0) val = (val - prefix[l - 1] + MOD) % MOD;

            dp[r + 1] = val;
            prefix[r + 1] = (prefix[r] + dp[r + 1]) % MOD;
        }

        return dp[n];
    }
};