#include <bits/stdc++.h>
using namespace std;
class Solution {
public:
    int mostWordsFound(vector<string>& sentences) {
        int maxi = 0;

        for (string s : sentences) {
            int spaces = 0;
            for (char c : s) {
                if (c == ' ')
                    spaces++;
            }
            maxi = max(maxi, spaces + 1);
        }

        return maxi;
    }
};
