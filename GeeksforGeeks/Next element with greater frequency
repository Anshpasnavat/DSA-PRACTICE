#include <bits/stdc++.h>
using namespace std;
class Solution {
public:
    vector<int> nextFreqGreater(vector<int>& arr) {
        int n = arr.size();
        unordered_map<int, int> freq;

        // count frequencies
        for (int x : arr)
            freq[x]++;

        vector<int> ans(n);
        stack<int> st;

        // traverse from right to left
        for (int i = n - 1; i >= 0; i--) {
            while (!st.empty() && freq[st.top()] <= freq[arr[i]]) {
                st.pop();
            }

            ans[i] = st.empty() ? -1 : st.top();
            st.push(arr[i]);
        }

        return ans;
    }
};
