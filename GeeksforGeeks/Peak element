class Solution {
public:
    int peakElement(vector<int>& arr) {
        int low = 0, high = arr.size() - 1;

        while (low < high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] < arr[mid + 1]) {
                // peak lies on right side
                low = mid + 1;
            } else {
                // peak lies on left side or at mid
                high = mid;
            }
        }

        return low; // index of a peak element
    }
};