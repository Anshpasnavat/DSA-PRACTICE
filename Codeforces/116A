#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    int current = 0, maxPassengers = 0;

    for (int i = 0; i < n; i++) {
        int a, b;
        cin >> a >> b;

        current -= a;   // passengers leaving
        current += b;   // passengers entering

        maxPassengers = max(maxPassengers, current);
    }

    cout << maxPassengers;
    return 0;
}
