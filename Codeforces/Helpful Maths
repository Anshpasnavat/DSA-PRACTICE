#include <bits/stdc++.h>
using namespace std;

int main() {
    string s;
    cin >> s;

    vector<int> nums;
    for (char c : s) {
        if (c != '+')
            nums.push_back(c - '0');
    }

    sort(nums.begin(), nums.end());

    for (int i = 0; i < (int)nums.size(); i++) {
        cout << nums[i];
        if (i + 1 < (int)nums.size())
            cout << "+";
    }
    return 0;
}
